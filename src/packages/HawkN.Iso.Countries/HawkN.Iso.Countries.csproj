<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <FileVersion>8.0.0.0</FileVersion>
        <OutputType>Library</OutputType>
        <Copyright>Copyright © 2025 Nikolay Selyutin (HawkN113)</Copyright>
        <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
        <GenerateAssemblyVersionAttribute>false</GenerateAssemblyVersionAttribute>
        <GenerateAssemblyFileVersionAttribute>true</GenerateAssemblyFileVersionAttribute>
        <GenerateAssemblyInformationalVersionAttribute>false</GenerateAssemblyInformationalVersionAttribute>
        <Optimize>true</Optimize>
        <PublicSign>false</PublicSign>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <IncludeSymbols>false</IncludeSymbols>
        <IsPackable>true</IsPackable>
        <VersionPrefix>8.0.0</VersionPrefix>
        <!-- Use when need to update 'CountryCode','LocalCountryDatabase' -->
        <GenerateCountryFiles Condition="'$(GenerateCountryFiles)' == ''">false</GenerateCountryFiles>
        <CountryCodeFile>$(MSBuildProjectDirectory)\CountryCode.cs</CountryCodeFile>
        <LocalCountryDatabaseFile>$(MSBuildProjectDirectory)\LocalCountryDatabase.cs</LocalCountryDatabaseFile>
        <EmitCompilerGeneratedFiles>$(GenerateCountryFiles)</EmitCompilerGeneratedFiles>
        <CompilerGeneratedFilesOutputPath>$(BaseIntermediateOutputPath)\Generated</CompilerGeneratedFilesOutputPath>
    </PropertyGroup>
    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
        <DebugType>embedded</DebugType>
        <DocumentationFile>bin\Debug\HawkN.Iso.Countries.xml</DocumentationFile>
        <WarningsAsErrors>;NU1605</WarningsAsErrors>
    </PropertyGroup>
    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
        <DebugType>embedded</DebugType>
        <DocumentationFile>bin\Release\HawkN.Iso.Countries.xml</DocumentationFile>
        <WarningsAsErrors>;NU1605</WarningsAsErrors>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.1" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="8.0.2" />
    </ItemGroup>
    <ItemGroup>
        <InternalsVisibleTo Include="HawkN.Iso.Countries.Tests" />
        <InternalsVisibleTo Include="DynamicProxyGenAssembly2" />
    </ItemGroup>
    <ItemGroup>
        <None Update="Package\Content\HawkN.Iso.Countries.ico.png">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="Package\Content\README.md">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
    </ItemGroup>
    <ItemGroup>
        <Compile Remove="CountryCode.cs" />
        <Compile Remove="LocalCountryDatabase.cs" />
    </ItemGroup>
    <ItemGroup Condition="'$(GenerateCountryFiles)' != 'true'">
        <Compile Include="CountryCode.cs" Condition="Exists('CountryCode.cs')" />
        <Compile Include="LocalCountryDatabase.cs" Condition="Exists('LocalCountryDatabase.cs')" />
    </ItemGroup>
    <ItemGroup Condition="'$(GenerateCountryFiles)' == 'true'">
        <ProjectReference Include="..\..\packages\HawkN.Iso.Countries.Generators\HawkN.Iso.Countries.Generators.csproj"
                          OutputItemType="Analyzer"
                          ReferenceOutputAssembly="false" />
    </ItemGroup>
    <Target Name="CleanGeneratedFilesBeforeBuild" BeforeTargets="BeforeBuild" Condition="'$(GenerateCountryFiles)' == 'true'">
        <Delete Files="CountryCode.cs;LocalCountryDatabase.cs" />
    </Target>
    <Target Name="CopyGeneratedFiles" AfterTargets="CoreCompile" Condition="'$(GenerateCountryFiles)' == 'true'">
        <ItemGroup>
            <_GeneratedFiles Include="$(CompilerGeneratedFilesOutputPath)\**\*.g.cs" />
        </ItemGroup>
        <Error Condition="'@(_GeneratedFiles)' == ''" Text="Source Generator did not produce any files in $(CompilerGeneratedFilesOutputPath)" />
        <Copy SourceFiles="@(_GeneratedFiles)" DestinationFiles="@(_GeneratedFiles->'$(MSBuildProjectDirectory)\%(Filename).cs')" OverwriteReadOnlyFiles="true" />
        <Move SourceFiles="$(MSBuildProjectDirectory)\CountryCode.g.cs" DestinationFiles="$(MSBuildProjectDirectory)\CountryCode.cs" Condition="Exists('$(MSBuildProjectDirectory)\CountryCode.g.cs')" />
        <Move SourceFiles="$(MSBuildProjectDirectory)\LocalCountryDatabase.g.cs" DestinationFiles="$(MSBuildProjectDirectory)\LocalCountryDatabase.cs" Condition="Exists('$(MSBuildProjectDirectory)\LocalCountryDatabase.g.cs')" />
        <ItemGroup>
            <Compile Include="CountryCode.cs" />
            <Compile Include="LocalCountryDatabase.cs" />
            <FileWrites Include="CountryCode.cs;LocalCountryDatabase.cs" />
        </ItemGroup>
        <Message Text="Successfully materialized files to project root." Importance="high" />
    </Target>
</Project>
